<Page x:Class="Example_DB2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Example_DB2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" >
            <TextBlock TextWrapping="Wrap" Text="Menu" FontSize="18" HorizontalAlignment="Center" Margin="6"/>
            <Button x:Name="Italy" Content="Students" HorizontalAlignment="Center" Margin="10" Padding="5" FontSize="20" Width="90" Click="btnClick_Students"/>
            <Button x:Name="France" Content="Teachers" HorizontalAlignment="Center" Margin="10" Padding="5" FontSize="20" Width="90" Click="btnClick_Teachers"/>
        </StackPanel>

        <Frame x:Name="myFrame" Grid.Column="1" />
    </Grid>
</Page>
